<?xml version='1.0' encoding='utf-8'?>
<widget id="io.fanlik.film" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Фильмы</name>
    <description>Просмотр фильмов</description>
    <author email="student1883@mail.ru" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />
    
    <access origin="*"></access>
    <platform name="android">    
        <allow-intent href="market:*" />
        <icon src="www/img/logo.png" />
        <custom-config-file target="AndroidManifest.xml" parent="/*">
                    <uses-permission android:name="android.permission.INTERNET" />
                    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
                    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
                  <!-- <action android:name="android.intent.action.VIEW" />
                    <category android:name="android.intent.category.BROWSABLE" />
                   <category android:name="android.intent.category.DEFAULT" /> -->
                   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </custom-config-file>
    </platform>
</widget>
